<VirtualHost *:80>
  ServerName <%= @app.url %>
  DocumentRoot <%= @app.app_root %>/public
  RackEnv development

  <Directory <%= @app.app_root %>/public >
    AllowOverride all
    Options -MultiViews
    Options ExecCGI FollowSymLinks
    Order allow,deny
     Allow from all
  </Directory>
</VirtualHost>
